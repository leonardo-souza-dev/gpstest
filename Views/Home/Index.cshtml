
<ion-content ng-controller="MapController">

    <div style="padding:24px;" ng-show="estaPertoDeAlgumLocal && !decidiuNaoFazerCheckin">
        Deseja fazer checkin em {{localPerto.nome}}?
        <a href="#" ng-click="fazerCheckin()">Sim</a>
        <a href="#" ng-click="naoFazerCheckin()">Não</a>
    </div>

    <div ng-show="mostrarAtualizarLocalizacao">
        <br />
        <br />
        <a href="#" ng-click="atualizarLocalizacao()">Atualizar Localização</a>
        <br />
        <br />
    </div>
    <div id="map" data-tap-disabled="true" ng-hide="true" style="width:40px;height:40px;"></div>

    <table>
        <tr>
            <td>Estabelecimento</td>
            <td>Distancia (metros)</td>
        </tr>
        <tr ng-repeat="local in locais">
            <td>{{local.nome}}</td>
            <td>{{local.distancia}}</td>
        </tr>
    </table>
</ion-content>